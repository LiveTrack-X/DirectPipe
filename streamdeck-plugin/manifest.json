{
  "SDKVersion": 2,
  "Author": "DirectPipe",
  "CodePath": "src/plugin.js",
  "Description": "Control DirectPipe audio processing from your Stream Deck. Toggle VST bypass, adjust volumes, switch presets, and panic mute.",
  "Name": "DirectPipe",
  "Icon": "images/directpipe",
  "URL": "https://github.com/directpipe/directpipe",
  "Version": "3.1.0",
  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    }
  ],
  "Software": {
    "MinimumVersion": "6.4"
  },
  "Category": "DirectPipe Audio",
  "CategoryIcon": "images/category",
  "Actions": [
    {
      "UUID": "com.directpipe.bypass-toggle",
      "Name": "Bypass Toggle",
      "Tooltip": "Toggle VST plugin bypass on/off. Long-press for master bypass.",
      "Icon": "images/bypass",
      "States": [
        {
          "Image": "images/bypass-active",
          "TitleAlignment": "middle",
          "FontSize": "10",
          "Title": "Bypass"
        },
        {
          "Image": "images/bypass-off",
          "TitleAlignment": "middle",
          "FontSize": "10",
          "Title": "Active"
        }
      ],
      "SupportedInMultiActions": true,
      "PropertyInspectorPath": "src/inspectors/bypass-pi.html"
    },
    {
      "UUID": "com.directpipe.volume-control",
      "Name": "Volume Control",
      "Tooltip": "Adjust volume for input, virtual mic, or monitor outputs. Use dial or press to toggle mute.",
      "Icon": "images/volume",
      "States": [
        {
          "Image": "images/volume-on",
          "TitleAlignment": "bottom",
          "FontSize": "9",
          "Title": "Volume"
        },
        {
          "Image": "images/volume-muted",
          "TitleAlignment": "bottom",
          "FontSize": "9",
          "Title": "Muted"
        }
      ],
      "SupportedInMultiActions": true,
      "PropertyInspectorPath": "src/inspectors/volume-pi.html",
      "Encoder": {
        "layout": "$B1",
        "TriggerDescription": {
          "Rotate": "Adjust volume",
          "Push": "Toggle mute",
          "Touch": "Set volume",
          "LongTouch": "Reset to 100%"
        }
      }
    },
    {
      "UUID": "com.directpipe.preset-switch",
      "Name": "Preset Switch",
      "Tooltip": "Load a specific preset by index, or cycle through presets with next/previous.",
      "Icon": "images/preset",
      "States": [
        {
          "Image": "images/preset-active",
          "TitleAlignment": "middle",
          "FontSize": "9",
          "Title": "Preset"
        }
      ],
      "SupportedInMultiActions": true,
      "PropertyInspectorPath": "src/inspectors/preset-pi.html"
    },
    {
      "UUID": "com.directpipe.panic-mute",
      "Name": "Panic Mute",
      "Tooltip": "Immediately mute all DirectPipe audio outputs. Press again to unmute.",
      "Icon": "images/panic",
      "States": [
        {
          "Image": "images/panic-off",
          "TitleAlignment": "middle",
          "FontSize": "12",
          "FontStyle": "Bold",
          "Title": "MUTE"
        },
        {
          "Image": "images/panic-on",
          "TitleAlignment": "middle",
          "FontSize": "12",
          "FontStyle": "Bold",
          "Title": "MUTED"
        }
      ],
      "SupportedInMultiActions": true
    }
  ]
}
